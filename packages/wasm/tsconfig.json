{
    "compilerOptions": {
      "strict": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "declarationMap": true,
      "declaration": true,
      "composite": true,
      "emitDecoratorMetadata": true,
      "useUnknownInCatchVariables": false,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "outDir": "./lib",
      "declarationDir": "./lib"
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      },
      "esm": true
    },
    "include": ["src/**/*"]
  }
