{
  "source": {
    "includePattern": ".+\\.ts$",
    "exclude": ["node_modules", "lib", "fixtures"]
  },
  "opts": {
    "destination": "./jsdocs/",
    "recurse": true
  },
  "plugins": [
    "plugins/markdown",
    "jsdoc-babel"
  ],
  "babel": {
    "extensions": ["ts"],
    "ignore": ["**/*.(test|spec).ts"],
    "babelrc": false,
    "presets": [["@babel/preset-typescript", { "allExtensions": true }]]
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  }
}